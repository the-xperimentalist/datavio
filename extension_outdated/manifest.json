{
  "name": "Sellist",
  "version": "0.1.0",
  "description": "Competitor research of ecommerce products",
  "permissions": ["storage", "tabs"], // see the usage of cookies, declarativeContent, dom, events, identity, loginState, management, privacy, runtime, search
  "host_permissions": ["https://*.amazon.com/*", "https://*.flipkart.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*", "https://*.flipkart.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": ["https://*.amazon.com/*", "https://*.flipkart.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "Sellist competitor research",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
